/* components/calendar/calendar.wxss */
@import "/assets/iconfont/iconfont.wxss";
.calendar-container {
  display: flex;
  flex-wrap: wrap;
}
.calendar-item {
  width: 14.28%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.calender-date-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.calendar-date {
  font-size: 26rpx;
  width: 100%;
  height: 40rpx;
  border-radius: 50%;
  color: rgb(255, 166, 0);
}
.calendar-date.today {
  background-color: yellow;
}
.calendar-mood {
  color: lightgrey;
}
.iconfont {
  font-size: 50rpx;
  font-weight: bold;
}
.iconfont.mood-0 {
  color: red;
}
.iconfont.mood-1 {
  color: lightcoral;
}
.iconfont.mood-2 {
  color: rgb(255, 230, 184);
}
.iconfont.mood-3 {
  color: lightblue;
}

.iconfont.mood-4 {
  color: blue;
}