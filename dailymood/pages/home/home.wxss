/* dailymood/pages/home/home.wxss */
/* -----------------标题 -------------------*/
.title {
  color: rgb(201, 115, 81);
  font-size: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title-img {
  width: 300rpx;
  height: 300rpx;
}
.title-text {
  font-weight: bold;
}
.title-subtext {
  font-size: 25rpx;
  color: rgb(255, 166, 0);
}
/* ---------------日期切换部分---------------- */
.switchDate {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-evenly;
}
.prev,.next {
  width: 35rpx;
  height: 35rpx;
}
.today {
  color:rgb(201, 115, 81);
  font-size: 40rpx;
  line-height: 40rpx;
}
.next {
  transform: rotate(180deg);
}
.today-year,.today-month {
  padding-right: 15rpx;
}

/* ---------------星期---------------- */
.week {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;

  color: rgb(255, 166, 0);
  margin:25rpx 0 15rpx;
}
.week-item {
  width: 14.28%;
  text-align: center;
  font-size: 30rpx;
}

/* ---------------日期选择框---------------- */
.choose-date {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.choose-date-box {
  width: 50%;
  height: 200rpx;
  text-align: center;

  color: rgb(255, 166, 0);
}
.confirm-choice {
  margin-top: 30rpx;
  height: 50rpx;
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: lightyellow;
  border-radius: 20rpx;
  color: rgb(255, 166, 0);
}
